
@{
    ViewData["Title"] = "Index";
}
@model UserViewModel
<div class="row">
    <div class="col-9 user" id="user">
        <div class="user__card">
            <div class="user__card__body">
                <h5 class="user__card__title">User Info</h5>
                <div class="user__card__info">
                   <div class="info__header">
                       <h4>User Name</h4>
                        <h4>Email</h4>
                        <h4>City</h4>
                   </div>
                    <div class="info__content">
                       <p>@Model.UserName</p>
                        <p>@Model.Email</p>
                        <p>@Model.City</p>
                    </div>


                </div>
            </div>
        </div>
    </div>
    <div class="col-3">
        <div class="product__create__card">
            <a asp-controller="Products" asp-action="Index" class="list-group-item list-group-item-action product__create__card__button">
                <p>Products</p>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg>
            </a>
        </div>
    </div>
</div>

