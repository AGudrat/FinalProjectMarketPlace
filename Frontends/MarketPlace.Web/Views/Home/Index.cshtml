@{
    ViewData["Title"] = "Home Page";
    var count = 0;
}
@model List<ProductViewModel>

<section class="hero" id="hero">
    @Html.Partial("PartialViews/_Hero.cshtml")
</section>
<section class="daily__promotions" id="daily__promotions">
    <div class="daily__promotions__header">
        <h3 class="daily__promotions__header-text">Daily Promotions</h3>
    </div>
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            count++;
            if (count == 1 || (count % 3 == 1))
            {
                @Html.Raw("""<div class="row g-4">""")
            }
            <div class="col-3">
                <a asp-route-id="@item.Id" asp-action="Detail" asp-controller="Home" class="product__card">
                    <div class="product__card__image__container">
                        <img src="@item.StockPictureUrl" class="product__card__image" />
                    </div>
                    <div class="product__card__body">
                        <h5 class="product__card__title">@item.Name</h5>
                        <h4 class="product__card__price">$@item.Price</h4>
                    </div>
                </a>
            </div>
            if (count % 3 == 0)
            {
                @Html.Raw("""</div>""")

            }
        }
    }
</section>


