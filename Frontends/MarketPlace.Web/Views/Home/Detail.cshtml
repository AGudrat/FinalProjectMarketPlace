@{
    ViewData["Title"] = "Detail";
}
@model ProductViewModel

<div class="row product__detail">
    <div class="col-9 product__detail__card">
        <div class="row">
            <div class="product__detail__image__container col-5">
                <img src="@Model.StockPictureUrl" class="product__detail__image" />
            </div>
            <div class="col-7 d-flex flex-column">
                <div class="product__detail__about">
                    <h3>@Model.Name</h3>
                    <p>@Model.Price$</p>
                </div>
                <div class="product__detail__description">
                    <h3>Description</h3>
                    <p>@Model.Description</p>
                    <div class="row">
                        <div class="product__quantity col-4">
                            <div class="row">
                                <button class="btn col-3 quantity__plus">-</button>
                                <input type="number"  class="d-flex col-6" />
                                <button class="btn col-3 quantity__minus">+</button>
                            </div>
                        </div>
                        <button class="btn btn-primary product__add__btn col-4">
                            <p>Add to basket</p> <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-basket" viewBox="0 0 16 16">
