@{
    ViewData["Title"] = "Detail";
}
@model ProductViewModel

<section class="details" id="details">
    <div class="row product__detail">
        <div class="col-12 product__detail__card">
            <div class="row">
                <div class="col-12 product__detail__name">
                    <h3>@Model.Name</h3>
                </div>
                <div class="product__images col-1">
                    <div class="flex-column">
                            @foreach (var item in Model.OtherPhotosStockUrl)
                            {
                                
                        <div class="product__images__item__container">
                            <img src="@item" class="product__images__item" />
                        </div>
                            }
                    </div>
                </div>
                <div class="product__detail__image__container col-4">
                    <img src="@Model.MainPhotoStockUrl" class="product__detail__image" />
                </div>
                <div class="col-6 d-flex flex-column">
                    <div class="product__detail__about">
                        <h3>Price: </h3>
                        <p>$@Model.Price</p>
                    </div>
                    <div class="product__detail__description">

                        <div class="row product__quantity">
                            <div class="col-4 product__quantity__box">
                                <div class="row">
                                    <button class="btn col-4 quantity__minus ">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dash-lg" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M2 8a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11A.5.5 0 0 1 2 8Z" />
                                        </svg>
                                    </button>
                                    <p class="d-flex col-4">1</p>
                                    <button class="btn col-4 quantity__plus">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z" />
                                        </svg>
                                    </button>
                                </div>
                            </div>
                            <a asp-controller="Basket" asp-action="AddBasketItem" asp-route-id="@Model.Id" class="btn col-4">
                                <div class="product__add__btn">
                                    <p>Add To Basket</p>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-basket" viewBox="0 0 16 16">
                                        <path d="M5.757 1.071a.5.5 0 0 1 .172.686L3.383 6h9.234L10.07 1.757a.5.5 0 1 1 .858-.514L13.783 6H15a1 1 0 0 1 1 1v1a1 1 0 0 1-1 1v4.5a2.5 2.5 0 0 1-2.5 2.5h-9A2.5 2.5 0 0 1 1 13.5V9a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h1.217L5.07 1.243a.5.5 0 0 1 .686-.172zM2 9v4.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V9H2zM1 7v1h14V7H1zm3 3a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3A.5.5 0 0 1 4 10zm2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3A.5.5 0 0 1 6 10zm2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3A.5.5 0 0 1 8 10zm2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 1 .5-.5zm2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 1 .5-.5z" />
                                    </svg>
                                </div>
                            </a>
                        </div>
                        <h3>Description</h3>
                        <p>@Model.Description</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 also__like__products">
            <div class="also__like__products__header">
                <h5 class="also__like__products__header-text">You may also like</h5>
            </div>
            <div class="row">
                <div class="col-2" bis_skin_checked="1">
                    <a class="also__like__product__card" href="/Home/Detail/6424d16fc23fb98099da8612">
                        <div class="also__like__product__card__image__container" bis_skin_checked="1">
                            <img src="https://localhost:5012/photos/2e91ef22-0bab-4844-91f9-abd9ef413062.jpg" class="also__like__product__card__image">
                        </div>
                        <div class="also__like__product__card__body" bis_skin_checked="1">
                            <h5 class="also__like__product__card__title">Asus zenbook</h5>
                            <h4 class="also__like__product__card__price">$12,00</h4>
                        </div>
                    </a>
                </div>

            </div>

        </div>
    </div>

</section>
