                <li class="category__list__item"><a asp-action="Search" asp-controller="Home" asp-route-productName="Bag">Bag</a></li>*@
            </ul>
        </div>
        <div class="col-10">
            <div class="product__list">
                <div class="row">
                    @foreach (var item in Model.Products)
                    {
                        <div class="col-4 mb-4 d-flex justify-content-center">
                            <a asp-route-id="@item.Id" asp-action="Detail" asp-controller="Home" class="product__card">
                                <div class="product__card__image__container">
                                    <img src="@item.MainPhotoStockUrl" class="product__card__image" />
                                </div>
                                <div class="product__card__body">
                                    <h5 class="product__card__title">@item.Name</h5>
                                    <h4 class="product__card__price">$@item.Price</h4>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>