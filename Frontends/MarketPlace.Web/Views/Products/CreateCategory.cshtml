@{
    ViewData["Title"] = "CreateCategory";
}
@model CategoryCreateInput

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="category__create__form__card">
            <div class="card-body">
                <h5 class="category__create__form__card__title">Category Create</h5>

                <form asp-controller="Products" asp-action="CreateCategory" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Name">Category Name</label>
                        <input class="form-control" asp-for="Name" />
                        <span class="text-danger" asp-validation-for="Name" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Photo">Category Image</label>
                        <input type="file" asp-for="Photo" />
                        <span class="text-danger" asp-validation-for="Photo" />
                    </div>

                    <button type="submit" class="w-100 mb-4 btn btn-primary">Create</button>
                </form>
                @if (ViewBag.categoryList != null)
                {
                    <table class="tabe w-100 table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Picture</th>
                                <th>Category Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (CategoryViewModel item in ViewBag.categoryList)
                            {
                                <tr>
                                    <td class="text-center"> <img style="width:72px" src="@item.PhotoStockUrl" class="img-thumbnail" /></td>
                                    <td class="text-center">@item.Name</td>
                                    <td class="text-center">
                                        <a asp-action="UpdateCategory" asp-controller="products" asp-route-id="@item.Id" class="btn btn-warning">Category Update</a>
                                        <a asp-action="DeleteCategory" asp-controller="products" asp-route-id="@item.Id" class="btn btn-danger">Category Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">Product Not Foundc</div>
                }
            </div>
        </div>
    </div>
</div>
